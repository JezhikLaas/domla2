<Project DefaultTargets="Build" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <ItemGroup>
    <AngularFiles Include="**\.angular-cli.json" />
	<AngularDirectories Include="@(AngularFiles->'%(RootDir)%(Directory)')" />
  </ItemGroup>
  <Target Name="Build">
	<Exec Command="npm install" WorkingDirectory="%(AngularDirectories.FullPath)" />
	<Exec Command="ng build -prod -aot" WorkingDirectory="%(AngularDirectories.FullPath)" />
  </Target>
</Project>