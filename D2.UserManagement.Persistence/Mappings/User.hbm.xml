<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
    namespace="D2.UserManagement.Persistence" assembly="D2.UserManagement.Persistence">

  <class name="UserI" table="users">
    <id name="Id" type="Guid">
      <column name="id" not-null="true"/>
      <generator class="guid.comb" />
    </id>

    <version column="xmin" name="Version" generated="always" />

    <property name="FirstName">
      <column name="first_name" length="255" />
    </property>
    <property name="LastName">
      <column name="last_name" length="255" not-null="true" />
    </property>
    <property name="Password">
      <column name="password" length="255" not-null="true" />
    </property>
    <property name="Salutation">
      <column name="salutation" length="50" />
    </property>
    <property name="Title">
      <column name="title" length="50" />
    </property>
    <property name="EMail">
      <column name="email" length="255" not-null="true" />
    </property>
    <property name="Login">
      <column name="login" length="255" not-null="true" />
    </property>
    <property name="LoggedIn" type="UtcDateTime">
      <column name="logged_in" />
    </property>
    <property name="PrivacyAccepted" type="UtcDateTime">
      <column name="privacy_accepted" />
    </property>
  </class>
</hibernate-mapping>